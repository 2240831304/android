<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".eink.pioneer.stocklookup.ClassifyActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#DB4444"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imageView_title_quit"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:padding="10dp"
                app:srcCompat="@drawable/abc_vector_test" />

            <TextView
                android:id="@+id/textview_title_stocktype"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:layout_marginLeft="3dp"
                android:text="TextView" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp" >

            <TextView
                android:layout_width="0.0px"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="板块名字"/>

            <EditText
                android:id="@+id/saveclassifyname_edit"
                android:layout_width="0.0px"
                android:layout_height="match_parent"
                android:layout_weight="3.0"
                android:gravity="center"
                android:text="" />

            <Button
                android:id="@+id/saveclassifyname_button"
                android:layout_width="0.0px"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="保存" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ListView
                android:id="@+id/classify_listview"
                android:layout_width="0.0px"
                android:layout_height="match_parent"
                android:layout_weight="1.0" />

            <ListView
                android:id="@+id/classifymember_listview"
                android:layout_width="0.0px"
                android:layout_height="match_parent"
                android:layout_weight="3.0" />

        </LinearLayout>


    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>