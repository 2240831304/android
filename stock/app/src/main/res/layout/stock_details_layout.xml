<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".eink.pioneer.stocklookup.StockDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#DB4444"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imageView_title_quit"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:padding="10dp"
                app:srcCompat="@drawable/abc_vector_test" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/textview_title_stockname"
                    android:layout_width="match_parent"
                    android:layout_height="0.0px"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:layout_marginLeft="3dp"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/textview_title_stockcode"
                    android:layout_width="match_parent"
                    android:layout_height="0.0px"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:layout_marginLeft="3dp"
                    android:text="TextView" />
            </LinearLayout>

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="vertical" >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp" >
                        <TextView
                            android:layout_width="0.0px"
                            android:layout_height="match_parent"
                            android:layout_weight="1.0"
                            android:gravity="center"
                            android:text="现 价" />
                        <TextView
                            android:id="@+id/stock_curprice_text"
                            android:layout_width="0.0px"
                            android:layout_height="match_parent"
                            android:layout_weight="1.0"
                            android:gravity="center"
                            android:text="10.36" />
                        <TextView
                            android:layout_width="0.0px"
                            android:layout_height="match_parent"
                            android:layout_weight="1.0"
                            android:gravity="center"
                            android:text="涨跌" />
                        <TextView
                            android:id="@+id/stock_upanddown_text"
                            android:layout_width="0.0px"
                            android:layout_height="match_parent"
                            android:layout_weight="1.0"
                            android:gravity="center"
                            android:text="10.36" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp">
                        <TextView
                            android:layout_width="0.0px"
                            android:layout_height="match_parent"
                            android:layout_weight="1.0"
                            android:gravity="center"
                            android:text="年低价" />
                        <TextView
                            android:id="@+id/stock_yearminprice"
                            android:layout_width="0.0px"
                            android:layout_height="match_parent"
                            android:layout_weight="1.0"
                            android:gravity="center"
                            android:text="10.36" />
                        <TextView
                            android:layout_width="0.0px"
                            android:layout_height="match_parent"
                            android:layout_weight="1.0"
                            android:gravity="center"
                            android:text="年高价" />
                        <TextView
                            android:id="@+id/stock_yearmaxprice"
                            android:layout_width="0.0px"
                            android:layout_height="match_parent"
                            android:layout_weight="1.0"
                            android:gravity="center"
                            android:text="10.36" />
                        <TextView
                            android:layout_width="0.0px"
                            android:layout_height="match_parent"
                            android:layout_weight="1.0"
                            android:gravity="center"
                            android:text="预测价" />
                        <TextView
                            android:id="@+id/stock_calprice"
                            android:layout_width="0.0px"
                            android:layout_height="match_parent"
                            android:layout_weight="1.0"
                            android:gravity="center"
                            android:text="10.36" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="2dp"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/stock_realtime_price"
                        android:layout_width="0.0px"
                        android:layout_height="match_parent"
                        android:layout_weight="1.0"
                        android:gravity="center"
                        android:text="实时" />

                    <Button
                        android:id="@+id/stock_wuri_price"
                        android:layout_width="0.0px"
                        android:layout_height="match_parent"
                        android:layout_weight="1.0"
                        android:gravity="center"
                        android:text="五日" />

                    <Button
                        android:id="@+id/stock_days_price"
                        android:layout_width="0.0px"
                        android:layout_height="match_parent"
                        android:layout_weight="1.0"
                        android:gravity="center"
                        android:text="日k" />

                    <Button
                        android:id="@+id/stock_weeks_price"
                        android:layout_width="0.0px"
                        android:layout_height="match_parent"
                        android:layout_weight="1.0"
                        android:gravity="center"
                        android:text="周k" />

                    <Button
                        android:id="@+id/stock_months_price"
                        android:layout_width="0.0px"
                        android:layout_height="match_parent"
                        android:layout_weight="1.0"
                        android:gravity="center"
                        android:text="月k" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/stock_price_imageview"
                    android:layout_width="match_parent"
                    android:layout_height="200dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:orientation="horizontal" >
                    <TextView
                        android:layout_width="0.0px"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_weight="1.0"
                        android:text="简 介" />

                    <EditText
                        android:id="@+id/stock_means_editview"
                        android:layout_width="0.0px"
                        android:layout_height="match_parent"
                        android:layout_weight="3.0" />

                    <Button
                        android:id="@+id/stock_savemeans_button"
                        android:layout_width="0.0px"
                        android:layout_height="match_parent"
                        android:layout_weight="1.0"
                        android:gravity="center"
                        android:text="保存" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal" >
                    <TextView
                        android:layout_width="0.0px"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_weight="1.0"
                        android:text="预估价" />

                    <EditText
                        android:id="@+id/stock_calprice_editview"
                        android:layout_width="0.0px"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_weight="1.0" />

                    <TextView
                        android:layout_width="0.0px"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_weight="1.0"
                        android:text="状态等级" />

                    <EditText
                        android:id="@+id/stock_grade_edit"
                        android:layout_width="0.0px"
                        android:layout_height="match_parent"
                        android:layout_weight="1.0"
                        android:gravity="center"
                        android:text="9" />

                    <Button
                        android:id="@+id/stock_savemcalpri_button"
                        android:layout_width="0.0px"
                        android:layout_height="match_parent"
                        android:layout_weight="1.0"
                        android:gravity="center"
                        android:text="保存" />

                </LinearLayout>
            </LinearLayout>
        </ScrollView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <Button
                android:id="@+id/add_classify_but"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="添加" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>